<h1>All Todos</h1>

<% @items.each do |item| %>
  <% if item.user == current_user %>
    <h3><%= item.item %>
    <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_item_path(item) %>
    <%= link_to '<i class="fa fa-check" aria-hidden="true"></i>'.html_safe, item, method: :delete, data: { confirm: 'Are you sure you want to remove it from the list?' } %> </h3>
  <% end %>
<% end %>
<br>

<%= link_to 'New Item', new_item_path %>
<br>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'You\'re about to sign out'} %>