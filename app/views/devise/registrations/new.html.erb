<div id="main-forms-container">
  <div id="forms-container">
    <h1 class='login-header-1'>TO DO LIST<h1>
    <h2 class='login-header-2'>Sign up</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <p style="margin: 0;">Email</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'background: #f5f5f5; opacity:0.7; filter:alpha(opacity=70); text-align: center;
         font-family: Cabin Sketch, cursive; text-align: center; border: solid black;;' %>
      </div>
      <br>
      <div class="field">
        <p style="margin: 0;">Password</p>
        <p>
        <% if @minimum_password_length %>
        
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", style: 'background: #f5f5f5; opacity:0.7; filter:alpha(opacity=70); text-align: center;
         font-family: Cabin Sketch, cursive; text-align: center; border: solid black; ;' %>
        </p>
      </div>

      <div class="field">
        <p style="margin: 0;">Password confirmation</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'background: #f5f5f5; opacity:0.7; filter:alpha(opacity=70); text-align: center;
         font-family: Cabin Sketch, cursive; text-align: center; border: solid black;' %>
      </div>

      
      <div class="actions" id="logs-container">
        <%= f.submit "Sign up", class: 'login-btn btn btn-md' %> <%= render "devise/shared/links" %>
      </div>
    <% end %>

    
  </div>
</div>
